{
  "_comment": "Voice LCD Configuration - Customize your voice-activated display!",
  "_usage": "Modify commands, timings, messages, and hardware settings below",
  
  "hardware": {
    "lcd_i2c_address": "0x3f",
    "lcd_cols": 16,
    "lcd_rows": 2,
    "audio_sample_rate": 22050,
    "audio_chunk_size": 2048
  },
  
  "display": {
    "scroll_speed": 0.12,
    "short_text_display_time": 2.5,
    "command_result_time": 3.0,
    "heard_text_cycles": 1,
    "startup_message": ["Voice LCD v2", "Say 'Pi' or 'Pie'"],
    "listening_message": ["Ready", ""],
    "error_message": ["Not recognized", "Try 'Pi help'"]
  },
  
  "voice": {
    "wake_words": ["pi", "pie", "pied", "computer"],
    "model_path": "/home/morph/Desktop/LCD/models/vosk-model-small-en-us-0.15",
    "show_all_transcriptions": true,
    "command_timeout": 8.0,
    "confidence_threshold": 0.3,
    "ring_buffer": {
      "_comment": "Ring buffer prevents audio processing delays after conversations",
      "enabled": false,
      "silence_threshold": 0.01,
      "silence_duration": 3.0,
      "max_reset_interval": 30.0,
      "text_buffer_size": 50
    }
  },
  
  "commands": {
    "show ip": {
      "action": "show_ip",
      "aliases": ["show i p", "what's my ip", "ip address", "show address", "i p", "network", "my ip", "show network", "address", "shell i p", "shell ip", "shall i p", "shall ip", "phil ip", "show id"],
      "display_format": ["IP Address:", "{ip}"]
    },
    
    "show time": {
      "action": "show_time", 
      "aliases": ["what time", "current time", "show clock", "time", "clock", "what's the time", "tell time"],
      "time_format": "%H:%M:%S",
      "date_format": "%m/%d/%y"
    },
    
    "tell joke": {
      "action": "tell_joke",
      "aliases": ["tell a joke", "joke", "make me laugh", "funny", "be funny", "tell me a joke", "comedy", "laugh"],
      "scroll_duration": 8
    },
    
    "clear": {
      "action": "clear_display",
      "aliases": ["clear screen", "clear display", "blank", "clean", "wipe", "reset display", "empty"]
    },
    
    "hello": {
      "action": "custom_message",
      "aliases": ["hi", "hey", "greetings"],
      "message": "Hello there! How can I help you today?",
      "scroll_duration": 5
    },
    
    "weather": {
      "action": "run_command", 
      "aliases": ["show weather", "what's the weather", "weather", "temperature outside", "how's the weather", "weather report", "whether"],
      "command": "curl -s 'wttr.in/?format=%l:+%c+%t'",
      "display_format": ["Weather:", "{output}"]
    },
    
    "uptime": {
      "action": "run_command",
      "aliases": ["how long running", "system uptime"],
      "command": "uptime -p",
      "display_format": ["Uptime:", "{output}"]
    },
    
    "cpu temp": {
      "action": "run_command",
      "aliases": ["cpu temperature", "how hot", "temperature"],
      "command": "vcgencmd measure_temp | cut -d= -f2",
      "display_format": ["CPU Temp:", "{output}"]
    },
    
    "disk space": {
      "action": "run_command", 
      "aliases": ["disk usage", "storage space", "how much space"],
      "command": "df -h / | awk 'NR==2{print $4\" free\"}'",
      "display_format": ["Disk Space:", "{output}"]
    },
    
    "random number": {
      "action": "custom_message",
      "aliases": ["pick a number", "random", "give me a number"],
      "message": "Your number: {random_1_100}",
      "scroll_duration": 3
    },
    
    "shutdown": {
      "action": "run_command",
      "aliases": ["power off", "turn off", "shut down"],
      "command": "echo 'Shutdown in 10s!' && sleep 10 && sudo shutdown -h now",
      "display_format": ["Shutting down", "in 10 seconds..."],
      "confirmation_required": true
    },
    
    "show logs": {
      "action": "show_log_info",
      "aliases": ["log status", "check logs", "log info", "logs", "show log", "log size"],
      "display_format": ["Log Status:", "See console output"]
    },
    
    "clean logs": {
      "action": "clean_logs",
      "aliases": ["rotate logs", "clear logs", "cleanup logs", "clean log", "fix logs"],
      "display_format": ["Cleaning logs", "Please wait..."]
    },
    
    "system status": {
      "action": "system_health",
      "aliases": ["health check", "system info", "disk space", "status", "health", "system", "memory", "storage"],
      "display_format": ["System Status:", "See details below"]
    },
    
    "shell i away": {
      "action": "show_ip",
      "aliases": ["shell i way", "shell away"],
      "display_format": ["IP Address:", "{ip}"]
    },
    
    "pied": {
      "action": "custom_message",
      "aliases": ["pay", "paid"],
      "message": "Did you mean 'Pi'? Try: Pi time, Pi weather, Pi help",
      "scroll_duration": 6
    },
    
    "help": {
      "action": "custom_message",
      "aliases": ["commands", "what can you do", "options"],
      "message": "Try: time, ip, weather, joke, status, clear, help",
      "scroll_duration": 8
    },
    
    "restart": {
      "action": "run_command",
      "aliases": ["reboot", "restart system"],
      "command": "echo 'Restarting in 5s!' && sleep 5 && sudo reboot",
      "display_format": ["Restarting", "in 5 seconds..."]
    },
    
    "volume up": {
      "action": "run_command", 
      "aliases": ["louder", "turn up"],
      "command": "amixer set PCM 10%+",
      "display_format": ["Volume", "Increased"]
    },
    
    "volume down": {
      "action": "run_command",
      "aliases": ["quieter", "turn down"], 
      "command": "amixer set PCM 10%-",
      "display_format": ["Volume", "Decreased"]
    },
    
    "wifi": {
      "action": "run_command",
      "aliases": ["network status", "connection"],
      "command": "iwgetid -r 2>/dev/null || echo 'Not connected'",
      "display_format": ["WiFi:", "{output}"]
    }
  },
  
  "messages": {
    "jokes": [
      "Why don't robots ever panic? They have nerves of steel!",
