    "component_logs": {
      "transcription": {
        "enabled": true,
        "level": "INFO",
        "include_in_main": true
      },
      "hardware": {
        "enabled": true,
        "level": "INFO", 
        "include_in_main": true
      },
      "commands": {
        "enabled": true,
        "level": "INFO",
        "include_in_main": true
      },
      "system": {
        "enabled": true,
        "level": "INFO",
        "include_in_main": true
      }
    },
    "rotation": {
      "method": "size",
      "compress_old": true
    },
    "maintenance": {
      "auto_cleanup_days": 30,
      "max_total_size_mb": 100,
      "disk_space_warning_threshold_percent": 90
    }
  },
  
  "advanced": {
    "_comment": "Advanced system settings",
    "reload_config_on_change": true,
    "enable_custom_wake_sounds": false,
    "enable_command_history": true,
    "max_command_history": 50,
    
    "_legacy_logging": {
      "_comment": "Legacy settings - use 'logging' section above instead",
      "enable_logging": true,
      "log_file": "/home/morph/Desktop/LCD/voice_lcd.log"
    }
  }
}