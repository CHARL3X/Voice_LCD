  },
  
  "logging": {
    "_comment": "Enhanced logging with rotation and component separation",
    "enabled": true,
    "main_log": {
      "file": "/home/morph/Desktop/LCD/voice_lcd.log",
      "level": "INFO",
      "max_file_size_mb": 10,
      "backup_count": 5,
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
